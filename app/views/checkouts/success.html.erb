<% content_for :title, "Order Confirmed!" %>
<div class=" min-h-full bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-2xl">
    <% if @error %>
      <!-- Error State -->
      <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center">
        <h2 class="text-xl font-semibold text-red-900 mb-2">Oops! Something went wrong</h2>
        <p class="text-red-700"><%= @error %></p>
        <%= link_to "Return to Home", root_path, class: "mt-4 inline-block bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
      </div>
    <% elsif @session && @order %>
      <!-- Success State -->
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="bg-green-50 p-6 border-b">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div class="ml-3">
              <h1 class="text-2xl font-bold text-green-900">Order Confirmed!</h1>
              <p class="text-green-700">Thank you for your purchase</p>
            </div>
          </div>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-lg font-medium text-gray-900 mb-2">Order Details</h3>
              <p class="text-sm text-gray-600">Order ID: #<%= @order.id %></p>
              <p class="text-sm text-gray-600">Total: R$ <%= @order.total_in_currency %></p>
              <p class="text-sm text-gray-600">Email: <%= @order.customer_email %></p>
            </div>
            <div>
              <h3 class="text-lg font-medium text-gray-900 mb-2">What's Next?</h3>
              <p class="text-sm text-gray-600">You'll receive an email confirmation shortly.</p>
              <p class="text-sm text-gray-600">We'll notify you when your order ships.</p>
            </div>
          </div>
          <div class="mt-6 flex space-x-4">
            <%= link_to "Continue Shopping", root_path, class: "bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700 transition-colors" %>
            <%= link_to "View Order Details", "#", class: "bg-gray-200 text-gray-700 px-6 py-2 rounded hover:bg-gray-300 transition-colors" %>
          </div>
        </div>
      </div>
    <% elsif @session %>
      <!-- Session exists but no order found -->
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
        <h2 class="text-xl font-semibold text-yellow-900 mb-2">Order Processing</h2>
        <p class="text-yellow-700">Payment confirmed but order is still being processed. Please check back in a few minutes.</p>
        <%= link_to "Return to Home", root_path, class: "mt-4 inline-block bg-yellow-600 text-white px-4 py-2 rounded" %>
      </div>
    <% else %>
      <!-- No session found -->
      <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center">
        <h2 class="text-xl font-semibold text-red-900 mb-2">Invalid Session</h2>
        <p class="text-red-700">No valid session found. Please try again.</p>
        <%= link_to "Return to Home", root_path, class: "mt-4 inline-block bg-red-600 text-white px-4 py-2 rounded" %>
      </div>
    <% end %>
  </div>
</div>