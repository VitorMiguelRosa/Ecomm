<!DOCTYPE html>
<html>
  <head>
    <title>Ecomm</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="admin-page">
    <main class="flex h-screen">
      <nav class="flex">
        <div class="w-4/5 p-4 h-screen bg-(--cor-logo) md:w-64 sticky top-0">
          <div class="flex">
            <%= image_tag '/bambinilogo.png', class: 'w-16' %>
            <h1 class="ml-2 text-md items-center py-2 text-gray-50 font-bold hidden md:flex">
              Bambini Admin
            </h1>
          </div>
          <ul class="flex flex-col text-gray-50 gap-1">
            <li>
              <%= link_to admin_path, class: "block hover:rounded
              hover:bg-(--cor-logo-hover)  pl-3 py-2" do %>
                <%= icon('fa-solid', 'gauge-high', class: "mr-2") %>
                <span class="hidden md:flex">Dashboard</span>
              <% end %>
            </li>
            <li>
              <%= link_to admin_products_path, class: "block hover:rounded
              hover:bg-(--cor-logo-hover) pl-3 py-2" do %>
                <%= icon('fa-solid', 'cart-shopping', class: "mr-2") %>
                <span class="hidden md:flex">Products</span>
              <% end %>
            </li>
            <li>
              <%= link_to admin_categories_path, class: "block hover:rounded
              hover:bg-(--cor-logo-hover) pl-3 py-2" do %>
                <%= icon('fa-solid', 'list', class: "mr-2") %>
                <span class="hidden md:flex">Categories</span>
              <% end %>
            </li>
            <li>
              <%= link_to admin_orders_path, class: "block hover:rounded
              hover:bg-(--cor-logo-hover) pl-3 py-2" do %>
                <%= icon('fa-solid', 'truck-fast', class: "mr-2") %>
                <span class="hidden md:flex">Orders</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_admin_session_path, data: { "turbo-method": :delete, "turbo-confirm": "Are you sure you want to sign out?" }, class: "block hover:rounded hover:bg-(--cor-logo-hover) pl-3 py-2" do %>
                <%= icon('fa-solid', 'sign-out', class: "mr-2") %>
                <span class="hidden md:flex">Sign Out</span>
              <% end %>
            </li>
          </nav>
          <div class="admin-container py-8 flex-1">
            <%= yield %>
          </div>
        </main>
      </body>
    </html>
