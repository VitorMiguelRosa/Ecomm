<% content_for :title, "Showing category" %>

<div class="w-full max-w-4xl mx-auto p-0 sm:px-2 lg:px-8">
  <!-- Notice -->
  <% if notice.present? %>
    <div class="mb-6">
      <p class="py-3 px-4 bg-green-50 border border-green-200 text-green-700 font-medium rounded-md" id="notice"><%= notice %></p>
    </div>
  <% end %>

  <!-- Header Section -->
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-8 space-y-4 lg:space-y-0">
    <h1 class="font-bold text-3xl sm:text-4xl text-(--cor-logo) text-center lg:text-left">Category Details</h1>
    
    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2">
      <%= link_to "Edit Category", edit_admin_category_path(@admin_category), class: "w-full sm:w-auto text-center rounded-md px-4 py-2.5 bg-(--cor-logo) hover:bg-(--cor-logo-hover) text-white font-medium transition-colors" %>
      <%= link_to "Back to categories", admin_categories_path, class: "w-full sm:w-auto text-center rounded-md px-4 py-2.5 bg-gray-600 hover:bg-gray-700 text-white font-medium transition-colors" %>
    </div>
  </div>

  <!-- Category Details Section -->
  <div class="bg-white shadow-lg rounded-lg p-6 lg:p-8 mb-6">
    <%= render @admin_category %>
  </div>

  <!-- Danger Zone -->
  <div class="bg-red-50 border border-red-200 rounded-lg p-6">
    <h3 class="text-lg font-medium text-red-900 mb-4">Danger Zone</h3>
    <p class="text-sm text-red-700 mb-4">Once you delete this category, there is no going back. Please be certain.</p>
    <%= button_to "Delete Category", admin_category_path, method: :delete, 
        class: "w-full sm:w-auto rounded-md px-4 py-2.5 text-white bg-red-600 hover:bg-red-700 font-medium cursor-pointer transition-colors", 
        data: { turbo_confirm: "Are you sure you want to delete this category? This action cannot be undone." } %>
  </div>
</div>
