<% content_for :title, "Editing category" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl text-(--cor-logo)">Editing category</h1>

  <%= render "form", admin_category:  @admin_category %>

  <%= link_to "Show this category", admin_category_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-300 hover:bg-gray-400 inline-block font-medium" %>
  <%= link_to "Back to categories", admin_categories_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-2 sm:ml-0 rounded-md px-3.5 py-2.5 bg-gray-300 hover:bg-gray-400 inline-block font-medium" %>
  <%= button_to "Destroy this category", admin_category_path, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-2 sm:ml-0", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
